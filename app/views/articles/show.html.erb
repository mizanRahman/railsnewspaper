
<h1>
  Title:
  <%=h @article.title %>
</h1>

<p>
  <b>Description:</b>
  <%=h @article.description %>
</p>

<h2>Comments</h2>

<table>
  
  <% @comments.each do |comment| %>
  <tr>
    <td><%=h comment.comment %></td>
  </tr>
<% end %>
</table>

<br />

<% form_for [@article, @new_comment] do |f| %>
   <%= f.text_area :comment %>
   <%= f.submit "Post Comment" %>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %><br/>
<%= link_to 'New Comment', new_article_comment_path(@article) %> 